<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen2Grey.Views.PageEliminarPagos">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id"
                       HorizontalOptions="Start"
                       FontSize="20"
                       TextColor="Black"
                       Margin="30,0,10,0"/>
            <Entry Keyboard="Numeric"
                       x:Name="id"
                       Placeholder="Id pago"
                       Margin="30,0,30,0"
                       TextColor="Black"
                       BackgroundColor="MistyRose"/>
            <Button Text="Eliminar" 
                    x:Name="btnEliminar"
                    Font="large" 
                    BorderWidth="2"
                    VerticalOptions="Center"
                    Clicked="btnEliminar_Clicked">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>