<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen2Grey.Views.PageEliminarPagos"
             BackgroundImageSource="bac2.jpg">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ELIMINAR  PAGO">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Id"
                       HorizontalOptions="Start"
                       FontSize="28"
                       TextColor="Black"  
                       VerticalOptions="End"                 
                       Margin="30,0,10,0"/>
            
            <Entry Keyboard="Numeric"
                       x:Name="id"
                       Placeholder="Id pago"
                       Margin="30,0,30,0"
                       TextColor="Black"
                       BackgroundColor="WhiteSmoke"/>
            
            <Button Text="Eliminar Pago" 
                    x:Name="btnEliminar"
                    Font="large" 
                    BorderWidth="2"
                    VerticalOptions="Center"
                    Margin="0,18,0,5"
                    HeightRequest="80"
                    WidthRequest="80"
                    Clicked="btnEliminar_Clicked">
                
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>